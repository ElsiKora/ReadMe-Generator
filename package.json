{
	"name": "@elsikora/readme-generator",
	"version": "1.0.6-dev.1",
	"description": "CLI utility for generating README.md files",
	"keywords": [
		"cli",
		"readme",
		"anthropic",
		"typescript",
		"openai",
		"generator"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ElsiKora/ReadMe-Generator"
	},
	"license": "MIT",
	"author": "ElsiKora",
	"type": "module",
	"bin": {
		"@elsikora/readme-generator": "./bin/index.js"
	},
	"files": [
		"bin"
	],
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "npm run prebuild && rollup -c",
		"commit": "cz",
		"format": "prettier --check .",
		"format:fix": "prettier --write .",
		"lint": "eslint ./",
		"lint:all": "npm run lint && npm run lint:types",
		"lint:all:fix": "npm run lint:fix && npm run lint:types:fix",
		"lint:fix": "eslint --fix ./",
		"lint:types": "tsc --noEmit",
		"lint:types:fix": "tsc --noEmit --skipLibCheck",
		"prepare": "husky",
		"release": "semantic-release",
		"start": "node dist/index.js"
	},
	"config": {
		"commitizen": {
			"path": "@elsikora/commitizen-plugin-commitlint-ai"
		}
	},
	"dependencies": {
		"@anthropic-ai/sdk": "^0.39.0",
		"@clack/prompts": "^0.10.0",
		"axios": "^1.8.4",
		"chalk": "^5.4.1",
		"cli-progress": "^3.12.0",
		"commander": "^13.1.0",
		"dotenv": "^16.4.7",
		"fs-extra": "^11.3.0",
		"glob": "^11.0.1",
		"https-proxy-agent": "^7.0.6",
		"ignore": "^7.0.3",
		"openai": "^4.89.0",
		"rimraf": "^6.0.1"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.0",
		"@commitlint/config-conventional": "^19.8.0",
		"@elsikora/commitizen-plugin-commitlint-ai": "^1.0.0",
		"@elsikora/eslint-config": "^3.7.12",
		"@rollup/plugin-typescript": "^12.1.2",
		"@saithodev/semantic-release-backmerge": "^4.0.1",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^11.0.1",
		"@semantic-release/npm": "^12.0.1",
		"@semantic-release/release-notes-generator": "^14.0.3",
		"@types/cli-progress": "^3.11.6",
		"@types/fs-extra": "^11.0.4",
		"@types/glob": "^8.1.0",
		"@types/node": "^22.13.12",
		"@types/yargs": "^17.0.33",
		"commitizen": "^4.3.1",
		"conventional-changelog-conventionalcommits": "^8.0.0",
		"eslint": "^9.23.0",
		"eslint-plugin-n": "^17.16.2",
		"eslint-plugin-no-secrets": "^2.2.1",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.0",
		"prettier": "^3.5.3",
		"rollup": "^4.37.0",
		"semantic-release": "^24.2.3",
		"typescript": "^5.8.2"
	},
	"publishConfig": {
		"access": "public"
	}
}
